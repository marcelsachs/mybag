colorscheme lunaperche

let mapleader = " "
let &t_SI = "\e[4 q"
let &t_EI = "\e[2 q"
let &t_SR = "\e[4 q"

nnoremap <leader>c :nohlsearch<CR>
nnoremap <leader>e :Ex<CR>
nnoremap <leader>n :set number!<CR>
nnoremap <leader>r :set number! relativenumber!<CR>

set background=dark
set clipboard=unnamedplus
set expandtab
set guicursor=
set hlsearch
set ignorecase
set incsearch
set mouse=a
set nobackup
set noswapfile
set number
set shiftwidth=4
set shortmess-=S
set smartindent
set tabstop=4
set wrap

syntax on
